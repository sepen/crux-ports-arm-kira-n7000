# Description: Library for file management.
# URL: https://wiki.lxde.org/en/PCManFM
# Maintainer: Jose Beneyto, sepen at crux dot nu
# Depends on: gtk3 menu-cache xorg-libxdamage libexif

name=libfm
version=1.3.2
release=2
source=(https://downloads.sourceforge.net/pcmanfm/$name-$version.tar.xz)

build() {
	cd $name-$version

  # Update xarchiver option: https://github.com/lxde/libfm/issues/35
  sed -i 's/create=xarchiver --add-to %F/create=xarchiver --compress %F/' data/archivers.list
  autoreconf -fi

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-gtk=3 \
		--disable-nls \
		--disable-gtk-doc-html

	# https://bugzilla.gnome.org/show_bug.cgi?id=656231
	sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

	make
	make DESTDIR=$PKG install

  rm -rf $PKG/usr/share/local
}
